@{
    ViewData["Title"] = "Reseptit";
}

<div class="container text-center mt-4">
    <h1>@ViewData["Title"]</h1>
</div>

<div id="listanpaikka">

</div>

<div class="container mt-5">    
    <form action="/Tietokanta/Reseptit" method="post">
        <h4>Lisää uusi Resepti</h4>
        <hr />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Nimi">Nimi:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="Nimi" name="Nimi" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Nimi" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Aika">Valmistusaika (min):</label>
            <div class="col-sm-10">
                <input class="form-control" type="number" id="Aika" name="Aika" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Aika" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Ohje">Ohje:</label>
            <div class="col-sm-10">
                <textarea class="form-control" type="text" id="Ohje" name="Ohje"></textarea>
                <span class="text-danger field-validation-valid" data-valmsg-for="Ohje" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<script src="~/js/Reseptit.js"></script>