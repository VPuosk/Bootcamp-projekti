@model IEnumerable<Demo.Models.Kommentti>

@{
    ViewData["Title"] = "Keskustelun alasivu";
}


<div class="container">
    <h4>Kommentit</h4>
    <hr />
    @foreach (var item in Model)
    {
        <div class="border border-primary">
            <div class="row">
                <div class="col-sm">
                    @Html.DisplayFor(modelItem => item.Otsikko)
                </div>
                <div class="col-sm">
                    @Html.DisplayFor(modelItem => item.Tekija)
                </div>
                <div class="col-sm">
                    @Html.DisplayFor(modelItem => item.Luotu)
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    @Html.DisplayFor(modelItem => item.Teksti)
                </div>
            </div>
        </div>
    }
</div>

<div class="container">
    <form action="/Tietokanta/Keskustelu/@ViewData["keskusteluID"]" method="post">
        <div class="form-horizontal">
            <h4>Lisää uusi kommentti</h4>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2" for="Otsikko" />
                <div class="col-md-10">
                    <input class="form-control" type="text" id="Otsikko" name="Otsikko" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="Otsikko" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Tekija" />
                <div class="col-md-10">
                    <input class="form-control" type="text" id="Tekija" name="Tekija" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="Tekija" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Teksti" />
                <div class="col-md-10">
                    <textarea class="form-control" type="text" id="Teksti" name="Teksti"></textarea>
                    <span class="text-danger field-validation-valid" data-valmsg-for="Teksti" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>